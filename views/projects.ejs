<%- include('partials/header') %>

<div class="container">
  <div class="row">
    <h1 id="yourp">Your Projects
  <a type="button" id="addbutton" href="/projects/add/project" role="button" class="btn btn-primary btn-lg">+ Add Project</a>
    </h1>
      </div>
  <div class="row row-cols-1 row-cols-md-3 g-4">
  
   <%   for(var i=0; i < projects.length ;i++) {%>
  
  <div class="col">
    <div class="card" style="width: 18rem;">
      <div class="card-body">
        <h5 class="card-title"><%-   projects[i].project_name%> </h5>
          <p class="card-text"><%-   projects[i].project_description%></p>
          <p1 class="time"><%-  projects[i].time%> <p1 class="Status">Status: <%- projects[i].status %> </p>
        <button href="/projects/<%- projects[i].project_id %> " class="btn btn-primary">Open Project</button>
        <div class="p-1 text-end">
        <form method="post" action="./projects/delete/<%- projects[i].project_id %>">
        <button class="btn btn-danger">Delete Project</button>
      </form>
        </div>
      </div>
    </div>
  </div>
    <% } %> 
  </div>
  </div>

<%- include('partials/footer') %>
