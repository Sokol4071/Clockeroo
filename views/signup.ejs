<%- include('partials/header') %>

<div class="container">
  <form action="/users/signup" method="post">
    <div class="card" id="signupform" >
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input type="name" name="username" class="form-control" id="username-input" placeholder="example.'Darko G'">
      </div>
      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="email" name="email" class="form-control" id="email-input" placeholder="example@gmail.com">
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input type="password" name="password" class="form-control" id="password-input" placeholder="example.'Use multiple diffrent characters for password'">
        </div>
        <div class="mb-3">
          <label for="Repeat password" class="form-label">Repeat Password</label>
          <input type="password" name="repeat-password" class="form-control" id="repeat-password-input" placeholder="Repeat the same password">
         </div>
          <div class="text-right">
          <button type="submit" class="btn btn-primary" id="signup-button">Sign Up</button>
        </div>
    </div>
 </form>
</div>

<%- include('partials/footer') %>
